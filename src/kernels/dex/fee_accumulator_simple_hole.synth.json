{
  "synth_version": "1.1",
  "backend": { "kind": "sygus", "solver": "cvc5", "timeout_ms": 30000 },
  "scope": { "kind": "inductive", "domain_caps": "from_model" },
  "holes": [
    {
      "hole_id": "accum_next",
      "kind": "expr",
      "type": "Int",
      "used_in": [{ "action": "add_fee", "field": "accumulated" }],
      "grammar_id": "G_accum",
      "semantic_constraints": [
        "result >= accumulated",
        "result <= accumulated + fee_amount",
        "result <= 1000000"
      ]
    }
  ],
  "grammars": [
    {
      "grammar_id": "G_accum",
      "start": "Expr",
      "productions": {
        "Const": ["0", "1", "10", "100", "1000"],
        "PosConst": ["1", "10", "100", "1000"],
        "Term": ["accumulated", "fee_amount", "(* fee_amount Const)"],
        "Lin": ["Const", "Term", "(+ Lin Term)", "(- Lin Term)"],
        "Guard": ["(<= Lin Lin)", "(and Guard Guard)"],
        "Expr": ["Lin", "(safe_div Lin PosConst)", "(ite Guard Expr Expr)"]
      }
    }
  ],
  "style_profile": {
    "max_nesting": 2,
    "max_branches": 8,
    "max_ast_nodes": 40,
    "penalties": {
      "branch": 10,
      "nesting": 25,
      "ast_node": 1
    }
  },
  "objective": {
    "kind": "lexicographic",
    "goals": ["SATISFY", "MINIMIZE_COST"]
  }
}
